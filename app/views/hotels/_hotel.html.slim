.hotel-item data-id=hotel.id
  h4 = hotel.name

  strong
    ' Address:
  = hotel.address
  br

  strong
    ' Stars:
  => hotel.stars
  br

  strong
    ' Rating:
  => hotel.rating
  br

  strong
    ' Distance:
  => hotel.distance_humanize
  br

  strong
    ' Check-in time:
  => hotel.formatted_check_in_time
  br

  - if policy(hotel).manage?
    => link_to "Edit", edit_hotel_path(hotel)
    = link_to "Delete", hotel_path(hotel), method: :delete, data: { confirm: "Are you sure?" }

  hr
